package introducao;

import java.util.Scanner;

public class PrimeiroClasse {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.println("Preço de Conta?");
		String conta = entrada.nextLine();
		
		System.out.println("Dia da vencer na conta?");
		int vencer = entrada.nextInt();
		
		System.out.println("Dia atual?");
		int atual = entrada.nextInt();
		
		int datas = vencer - atual;
		int atraso = 1%30;
		float juros = (datas x atraso);
		
		System.out.printf("%f é o valor dos juros por atraso.");
		
		
		
	}
}
